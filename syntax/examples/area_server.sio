        | sketch Rectangle(Int, Int)
        | sketch Circle(Int)
    sketch start :: (remote: Bool) -> Url {
        if remote {
            79f708c25a23ed367610facc14035adc7ba4b1bfa9252ef55c6c24f1b9b03abd::live/area_server
        } else {
            let {
                live_area_server_url: Url
