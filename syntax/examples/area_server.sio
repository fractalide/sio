                register("live/area_server", live_area_server_url)
            }
        }
    }
    sketch area :: (url: Url, request: Area) {
        url ! request
        receive url {
            | response: Int => { response }
        }

    }
    sketch loop :: () {
        receive all {
            | (from: Url, area: Area) => {
                match area {
                    | Rectangle(width: Int, height: Int) => {
                        from ! width * height
                        loop()
                    }
                    | Circle(radius: Int) => {
                        from ! 3.14159 * radius * radius
                        loop()
                    }
                }
            }
            | _ => {
                println!("error")
                loop()
            }
        }
    }
}
